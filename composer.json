{
  "name" : "alex-patterson-webdev/container",
  "description": "Simple implementation of the PSR-11 dependency injection container",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Alex Patterson",
      "email": "alex.patterson.webdev@gmail.com"
    }
  ],
  "provide" : {
    "psr/container-implementation" : "1.0.0"
  },
  "require": {
    "php" : ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit" : "^9.2",
    "psr/container" : "^1"
  },
  "autoload": {
    "psr-4": {
      "Arp\\Container\\" : "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ArpTest\\Container\\" : "test/phpunit"
    }
  },
  "scripts": {
    "test": "php vendor/bin/phpunit --coverage-clover=coverage.xml"
  },
  "config": {
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
